<?xml version="1.0" encoding="utf-8"?>
<!-- 个人中心 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/tabbar_color"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/mid_button_trans"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" >

            <!--
            android:drawableLeft="@drawable/back_seletor"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_seletor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择学校"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/position"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mid_button_trans"
            android:clickable="true"
            android:padding="12dip"
            android:src="@drawable/btn_dingwei_normal" />
    </RelativeLayout>

    <com.dazhongcun.widget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg"
        android:scrollbars="none" >

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="13dp"
                 >

                <EditText
                    android:id="@+id/query"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:paddingLeft="12dip"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:maxLength="12"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:textSize="@dimen/text_size_small" 
                    android:hint="搜索" />

                <ImageView 
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:padding="12dip"
                    android:src="@drawable/img_fangdajing"
                    />
            </RelativeLayout>

           

        </LinearLayout>
    </com.dazhongcun.widget.BounceScrollView>

</LinearLayout>